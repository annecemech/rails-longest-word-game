<h1>New game</h1>

<div class="grid-display">
  <ul>
  <% @grid.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
</div>
<div class="user-form">
  <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p>What is the longest word you can find ?</p>
  <input type="text" name="answer" value="<%= params[:answer] %>">
  <input id="grid" name="grid" type="hidden" value="<%= @grid %>"/>
  <input type="submit" value="Send my answer">
</form>
</div>
